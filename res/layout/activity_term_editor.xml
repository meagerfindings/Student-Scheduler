<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.meagerfindings.matgreten.c196_student_scheduler_mat_greten.TermEditorActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/termLabel"
        android:layout_width="133dp"
        android:layout_height="28dp"
        android:text="@string/term_title"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTermTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="top"
        android:inputType="textAutoComplete"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="27dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/termLabel"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/termStartLabel"
        android:layout_width="133dp"
        android:layout_height="28dp"
        android:text="@string/start_date"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/termLabel"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/termEndLabel"
        android:layout_width="133dp"
        android:layout_height="28dp"
        android:text="@string/end_date"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/termStartLabel"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintLeft_toRightOf="@+id/termStartLabel"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editTermTitle" />

    <EditText
        android:id="@+id/editEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintLeft_toRightOf="@+id/termEndLabel"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editStartDate"
        tools:ignore="LabelFor" />

</android.support.constraint.ConstraintLayout>
