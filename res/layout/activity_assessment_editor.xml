<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.meagerfindings.matgreten.c196_student_scheduler_mat_greten.AssessmentEditorActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/assessmentLabel"
                android:layout_width="133dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/assessment_title"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editAssessmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:gravity="top"
                android:inputType="textAutoComplete"
                app:layout_constraintBottom_toBottomOf="@+id/assessmentLabel"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/assessmentLabel"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/assessmentStartLabel"
                android:layout_width="133dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:text="@string/assessment_target_end"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/assessmentLabel"
                android:layout_marginLeft="16dp" />

            <EditText
                    android:id="@+id/editAssessmentStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/example_date"
                    android:inputType="date"
                    android:selectAllOnFocus="false"
                    android:textAllCaps="false"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editAssessmentTitle"
                app:layout_constraintLeft_toRightOf="@+id/assessmentStartLabel"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/assessmentNotesLabel"
                android:layout_width="133dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:text="@string/assessment_notes"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/assessmentStartLabel" />

            <EditText
                android:id="@+id/editAssessmentNotes"
                android:layout_width="393dp"
                android:layout_height="133dp"
                android:ems="10"
                android:hint="@string/assessment_notes_hint"
                android:inputType="textMultiLine"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/assessmentNotesLabel"
                app:layout_constraintVertical_bias="0.068"
                android:layout_marginLeft="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/assessmentAlertsLabel"
                android:layout_width="133dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/assessment_alerts"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editAssessmentNotes" />

            <TextView
                android:id="@+id/assessmentStartAlertLabel"
                android:layout_width="133dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/start_alert"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/assessmentAlertsLabel" />

            <TextView
                android:id="@+id/assessmentEndAlertLabel"
                android:layout_width="133dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/end_alert"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/assessmentStartAlertLabel" />

            <EditText
                android:id="@+id/assessmentStartAlertDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="datetime"
                app:layout_constraintLeft_toRightOf="@+id/assessmentStartAlertLabel"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/assessmentAlertsLabel" />

            <EditText
                android:id="@+id/assessmentEndAlertDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="datetime"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintLeft_toRightOf="@+id/assessmentEndAlertLabel"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/assessmentStartAlertDateTime"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/button"
                style="@android:style/Widget.DeviceDefault.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_note"
                app:layout_constraintHorizontal_bias="0.909"
                app:layout_constraintLeft_toRightOf="@+id/assessmentNotesLabel"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/editAssessmentNotes"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editAssessmentStartDate" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
