<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.meagerfindings.matgreten.c196_student_scheduler_mat_greten.AssessmentEditorActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tvAssessmentTitle"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1.70"
        android:text="@string/assessment_title"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAssessmentTargetDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/assessment_due_date"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAssessmentTitle" />

    <TextView
        android:id="@+id/tvAssessmentTargetDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/tvAssessmentTargetDateLabel"
        android:layout_marginLeft="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvAssessmentTargetDateLabel"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/tvAssessmentTargetDateLabel" />

    <TextView
        android:id="@+id/tvAssessmentTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1.70"
        android:text="@string/assessment_type"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvAssessmentTargetDateLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvAssessmentTypeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/assessment_type"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/tvAssessmentTypeLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/tvAssessmentTypeLabel"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvAssessmentTypeLabel"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/tvAssessmentTermLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/term"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAssessmentTypeLabel" />

    <TextView
        android:id="@+id/tvAssessmentTermValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/tvAssessmentTermLabel"
        app:layout_constraintTop_toTopOf="@+id/tvAssessmentTermLabel"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvAssessmentTermLabel"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/tvAssessmentCourseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/course"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAssessmentTermLabel" />

    <TextView
        android:id="@+id/tvAssessmentCourseValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/tvAssessmentCourseLabel"
        android:layout_marginLeft="44dp"
        app:layout_constraintTop_toTopOf="@+id/tvAssessmentCourseLabel"
        app:layout_constraintBottom_toBottomOf="@+id/tvAssessmentCourseLabel"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>