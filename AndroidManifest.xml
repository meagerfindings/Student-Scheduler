<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meagerfindings.matgreten.c196_student_scheduler_mat_greten">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".ScheduleProvider"
            android:authorities="com.meagerfindings.matgreten.c196_student_scheduler_mat_greten"
            android:exported="false"
            android:protectionLevel="signature"
            android:syncable="true" />

        <activity
            android:name=".TermsActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.meagerfindings.matgreten.c196_student_scheduler_mat_greten.TermsActivity" />
        </activity>
        <activity
            android:name=".TermEditorActivity"
            android:label="@string/edit_term"
            android:parentActivityName=".TermsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.meagerfindings.matgreten.c196_student_scheduler_mat_greten.TermEditorActivity" />
        </activity>

        <activity
            android:name=".CoursesActivity"
            android:label="EditorActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.meagerfindings.matgreten.c196_student_scheduler_mat_greten.CoursesActivity" />
        </activity>
        <activity
            android:name=".CourseEditorActivity"
            android:label="@string/edit_course"
            android:parentActivityName=".CoursesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.meagerfindings.matgreten.c196_student_scheduler_mat_greten.CourseEditorActivity" />
        </activity>
    </application>

</manifest>